<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <a href = "/edit/{{id}}">  
    <button class="btn btn-primary">Edit Post</button>
    </a>
  </p>
</div>

  <div class="col-md-6">
    <h3>Leave a Comment:</h3>

    <form class="form edit-post-form" data-id="{{id}}">
      <div class="form-group">
        <label for="post-desc">description:</label>
        <textarea class="form-input"   id="text" name="post-desc">{{text}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  </div>

{{#each comments as |comment|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h4>
        User # {{comment.user_id}}
      </h4>
      <p>{{format_date comment.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{comment.text}}
      </p>
    </div>
      <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{comment.id}}"
            >DELETE COMMENT</button>
          </div>
  </div>
{{/each}}



  <script src="/js/edit.js"></script>
  <script src="/js/comment.js"></script>